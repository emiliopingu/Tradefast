<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PantallaPrincipalNovedades"
        android:background="@color/common_google_signin_btn_text_dark_default">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="403dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="184dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/linearLayout">
        <Button
                android:text="subastas"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:id="@+id/botonSubastasPrincipal"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/botones"
                android:textColor="@drawable/texto_botones"/>
        <Button
                android:text="Novedades"
                android:layout_width="217dp"
                android:layout_height="match_parent"
                android:id="@+id/botonNovedadesPrincipal"
                android:layout_marginBottom="0dp"
                android:background="@drawable/botones"
                android:textColor="@drawable/texto_botones" android:layout_marginStart="0dp"
                android:textAlignment="center"/>
    </LinearLayout>
    <ImageView
            android:layout_width="99dp"
            android:layout_height="109dp"
            android:id="@+id/imagenUsuario1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="170dp"
            android:layout_height="54dp"
            android:id="@+id/txNombreUsuarioSubastas" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.84"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/buscadorSubastas" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bVender1"
            android:hint="buscador"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="386dp"
            android:layout_height="243dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.428" app:layout_constraintVertical_bias="0.879"
            android:id="@+id/recycleViewNovedades"
            android:background="@color/common_google_signin_btn_text_dark_default"/>
    <Button
            android:text="@string/botonVender1"
            android:layout_width="127dp"
            android:layout_height="33dp"
            android:id="@+id/bVender1"
            android:background="@drawable/botones"
            android:textColor="@drawable/texto_botones"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.029" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recycleViewNovedades" app:layout_constraintVertical_bias="0.147"/>
</androidx.constraintlayout.widget.ConstraintLayout>