<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PantallaPrincipalSubastas"
        android:background="@color/common_google_signin_btn_text_dark_default">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="320dp"
            android:layout_height="47dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="436dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.625">
        <Button
                android:text="subastas"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:id="@+id/botonSubastasPrincipal"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@android:color/holo_orange_dark"
                android:textColor="@android:color/background_light"/>
        <Button
                android:text="Novedades"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:id="@+id/botonNovedadesPrincipal"
                android:layout_marginBottom="0dp"
                android:background="@android:color/holo_orange_dark" android:layout_marginStart="0dp"
                android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    </LinearLayout>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:id="@+id/imagenUsuario1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:srcCompat="@mipmap/ic_launcher"/>
    <TextView
            android:text="TextView"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:id="@+id/txNombreUsuarioSubastas" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.863" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/buscadorSubastas" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956" android:hint="Buscador"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="366dp"
            android:layout_height="219dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.905" android:id="@+id/recycleViewSubastas"
            android:background="@color/common_google_signin_btn_text_dark_default"/>
</androidx.constraintlayout.widget.ConstraintLayout>