<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pantallasDeUsuario.PantallaUsuario" android:background="@color/common_google_signin_btn_text_dark_default">

    <ImageView
            android:layout_width="99dp"
            android:layout_height="95dp"
            android:id="@+id/imagenPerfil"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011"/>
    <TextView
            android:text="correo"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:id="@+id/correPerfil" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="192dp"
            app:layout_constraintHorizontal_bias="0.454"
            android:textAlignment="center" android:textSize="18sp"/>
    <Button
            android:text="editarPerfil"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:id="@+id/editarPerfil"
            android:textAlignment="center"
            android:background="@drawable/botones"
            android:textColor="@drawable/texto_botones"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.966"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="191dp"
            android:layout_height="38dp"
            android:id="@+id/edadPerfil" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/correPerfil" android:layout_marginTop="164dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="159dp"
            android:layout_height="37dp"
            android:id="@+id/nombrePerfil" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.844"
            android:layout_marginTop="100dp" android:textAlignment="center" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="203dp"
            android:layout_height="37dp"
            android:id="@+id/apellidoPerfil" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="292dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.468" android:textSize="18sp" android:textAlignment="center"/>
    <ListView
            android:layout_width="384dp"
            android:layout_height="255dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/historialArticulos"/>
</androidx.constraintlayout.widget.ConstraintLayout>