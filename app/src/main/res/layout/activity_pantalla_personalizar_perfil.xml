<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PantallaPersonalizarPerfil"
        android:background="@color/common_google_signin_btn_text_dark_pressed">

    <ImageView
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:id="@+id/imagenPerfil"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.457" android:layout_marginBottom="488dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/ic_launcher"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCambioNombre" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginTop="8dp"
            android:hint="@string/personalizarPnombre" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.062"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.489" android:backgroundTint="@android:color/holo_orange_dark"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/imagenPerfil"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCambioDePaypal" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="236dp"
            android:hint="@string/personalizarPpaypal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:backgroundTint="@android:color/holo_orange_dark" android:textAlignment="center"/>
    <Button
            android:layout_width="240dp"
            android:layout_height="63dp"
            android:id="@+id/botonConfirmarAjustePerfil" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="72dp"
            android:background="@drawable/botones"
            android:textColor="@drawable/texto_botones"
            android:textAlignment="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etCambioDePaypal" android:onClick="botonCambiar"
            tools:text="Aceptar"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cambiarCorreo" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/etCambioNombre"
            android:backgroundTint="@android:color/holo_orange_dark" android:hint="@string/personalizarPcorreo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cambiarContrasena" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cambiarCorreo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/etCambioDePaypal" android:textAlignment="center"
            android:hint="@string/personalizarPcontrasena" android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>