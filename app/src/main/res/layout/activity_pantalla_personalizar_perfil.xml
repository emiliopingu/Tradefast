<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PantallaPersonalizarPerfil"
        android:background="@color/common_google_signin_btn_text_dark_pressed">

    <ImageView
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.078" android:layout_marginBottom="488dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@mipmap/ic_launcher"/>
    <TextView
            android:text="CambiarImagen"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.075" android:textAlignment="center" android:textSize="16sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCambioNombre" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="132dp"
            android:hint="cambiarnombre" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.042"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.923" android:backgroundTint="@android:color/holo_orange_dark"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCambioContraseña" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="324dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="Vuelve a escribir la contraseña" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.892"
            android:backgroundTint="@android:color/holo_orange_dark" android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCambioDePaypal" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="236dp"
            android:hint="cambiar pago con Paypal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:backgroundTint="@android:color/holo_orange_dark" android:textAlignment="center"/>
    <Button
            android:text="Confirmar"
            android:layout_width="149dp"
            android:layout_height="70dp"
            android:id="@+id/botonConfirmarAjustePerfil" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="72dp"
            android:background="@android:color/holo_orange_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etCambioContraseña" app:layout_constraintVertical_bias="0.931"
            android:textAlignment="center" android:textColor="@color/common_google_signin_btn_text_dark_default"/>
</androidx.constraintlayout.widget.ConstraintLayout>