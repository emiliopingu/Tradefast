<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VenderObjetos">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imagenVenta" app:srcCompat="@mipmap/ic_launcher_round"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/aNombreVender" android:textAlignment="center" android:layout_marginTop="60dp"
                android:backgroundTint="@android:color/holo_orange_dark" android:hint="nombre Artículo"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/aPrecioVender" android:textAlignment="center" android:layout_marginTop="40dp"
                android:backgroundTint="@android:color/holo_orange_dark" android:hint="precio"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/aDescripVender" android:textAlignment="center" android:layout_marginTop="40dp"
                android:backgroundTint="@android:color/holo_orange_dark" android:hint="descripción"/>
        <Button
                android:text="aceptarVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aceptarVenta"
                android:layout_marginTop="100dp"
                android:background="@drawable/botones"
                android:textColor="@drawable/texto_botones"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>