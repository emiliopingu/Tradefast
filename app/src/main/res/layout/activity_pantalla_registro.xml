<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sesion.PantallaRegistro" android:background="@android:color/background_light">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:id="@+id/progressBar2" app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="624dp"
            app:layout_constraintHorizontal_bias="0.892" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="name"
            android:ems="10"
            android:id="@+id/RegistroNombre" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            android:backgroundTint="@android:color/holo_orange_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/regsitroApellido" app:layout_constraintVertical_bias="0.72"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regsitroApellido" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            android:hint="Apellido" android:layout_marginTop="136dp" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/registroEdad" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            android:hint="Edad"
            android:textColor="@android:color/holo_orange_dark"
            android:drawableTint="@android:color/holo_orange_dark"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textAlignment="center" app:layout_constraintBottom_toTopOf="@+id/botonDeRegsitro1"
            android:layout_marginBottom="32dp"/>
    <Button
            android:text="Registrarse"
            android:layout_width="257dp"
            android:layout_height="73dp"
            android:id="@+id/botonDeRegsitro1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/botones"
            android:textColor="@drawable/texto_botones"
            android:onClick="botonDeRegsitro1"
            android:layout_marginBottom="136dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/registroCorreoElectronico"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.39"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:hint="Introduzca el correo"
            app:layout_constraintBottom_toTopOf="@+id/registroEdad" android:layout_marginBottom="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/RegistroContraseña"
            app:layout_constraintTop_toBottomOf="@+id/regsitroApellido" android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.39"
            android:textAlignment="center" android:hint="contraseña" android:backgroundTint="@color/colorBotones"
            app:layout_constraintBottom_toTopOf="@+id/RegistroContraseña2" app:layout_constraintVertical_bias="0.034"/>
    <EditText
            android:layout_width="236dp"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/RegistroContraseña2"
            app:layout_constraintBottom_toTopOf="@+id/registroCorreoElectronico" android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.446"
            android:textAlignment="center" android:backgroundTint="@color/colorBotones"
            android:hint="viel a escribir la contraseña"/>
</androidx.constraintlayout.widget.ConstraintLayout>