<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@android:color/background_light">

    <ImageView
            android:layout_width="357dp"
            android:layout_height="150dp" tools:src="@mipmap/ic_launcher_round"
            android:id="@+id/imagenLogin" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            app:srcCompat="@mipmap/imagen_icono" app:layout_constraintHorizontal_bias="0.552"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_preferences"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.976" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#D8FF8922"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombreInicio" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="284dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="@string/loginCorreoHint" android:backgroundTint="#D8FF8922"
            android:textAlignment="center"/>
    <Button

            android:layout_width="134dp"
            android:layout_height="38dp"
            android:id="@+id/botonRegistrarse"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/botones"
            android:text="@string/botonRegistroInicio"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:backgroundTintMode="add"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            android:textColor="@drawable/texto_botones"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/contraseñaInicio"
            app:layout_constraintVertical_bias="0.716"/>
    <Button
            android:text="@string/botonIniciosecion"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:id="@+id/botonIniciarSecion"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp"
            app:layout_constraintStart_toEndOf="@+id/botonRegistrarse"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="@drawable/botones"
            android:textColor="@drawable/texto_botones"
            android:onClick="botonLogin"
            app:layout_constraintTop_toTopOf="@+id/botonRegistrarse"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/olvidarContraseña"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botones"
            android:textColor="@drawable/texto_botones"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/contraseñaInicio"
            app:layout_constraintVertical_bias="1.0" android:text="@string/ContrasenaOlvidada"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLogin"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.069"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/contraseñaInicio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nombreInicio" android:layout_marginTop="36dp"
            android:textAlignment="center" android:backgroundTint="@color/colorBotones"
            android:hint="Escriba contraseña"/>
</androidx.constraintlayout.widget.ConstraintLayout>